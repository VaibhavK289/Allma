# ============================================================
# ALLMA AI BACKEND - Environment Configuration
# ============================================================
# Copy this file to .env and configure your settings
# All values shown are defaults

# ============================================================
# Ollama Configuration
# ============================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TEMPERATURE=0.7
OLLAMA_NUM_CTX=4096
OLLAMA_TIMEOUT=120

# ============================================================
# Vector Store Configuration
# ============================================================
VECTOR_STORE_TYPE=chromadb
VECTOR_STORE_PATH=./data/vectorstore
VECTOR_STORE_COLLECTION=documents

# ============================================================
# RAG Configuration
# ============================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_RERANK_ENABLED=true

# ============================================================
# Document Processing
# ============================================================
MAX_FILE_SIZE_MB=50
TEMP_DIRECTORY=./data/temp
PROCESSED_DIRECTORY=./data/processed

# ============================================================
# Database Configuration
# ============================================================
DATA_DIRECTORY=./data
# DATABASE_URL=sqlite+aiosqlite:///./data/allma.db

# ============================================================
# Application Settings
# ============================================================
DEBUG=false
LOG_LEVEL=INFO
ENABLE_STREAMING=true

# ============================================================
# Server Configuration
# ============================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ============================================================
# Security & Rate Limiting
# ============================================================
ENABLE_RATE_LIMIT=true
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# CORS Configuration (comma-separated origins, or * for all)
CORS_ORIGINS=*

# API Key (optional - for protected endpoints)
# API_KEY_ENABLED=false
# API_KEY=your-secret-api-key

# ============================================================
# Monitoring (optional)
# ============================================================
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090

